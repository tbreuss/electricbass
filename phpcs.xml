<?xml version="1.0"?>
<ruleset name="Coding Standard">
    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg value="sp"/>
    <arg name="extensions" value="php"/>

    <!-- ignore warnings and display ERRORS only -->
    <arg  value="np"/>

    <config name="ignore_warnings_on_exit" value="1"/>

    <file>./assets</file>
    <file>./commands</file>
    <file>./components</file>
    <file>./config</file>
    <file>./controllers</file>
    <file>./entities</file>
    <file>./filters</file>
    <file>./helpers</file>
    <file>./mail</file>
    <file>./messages</file>
    <file>./migrations</file>
    <file>./models</file>
    <file>./modules</file>
    <file>./traits</file>
    <!-- <file>./views</file> -->
    <file>./web/index.php</file>
    <file>./web/index-test.php</file>
    <file>./widgets</file>

    <rule  ref="PSR12"/>
</ruleset>
